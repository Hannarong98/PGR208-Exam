<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="4dp"
    android:id="@+id/layout_row"
    android:focusable="true">
    
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/overview_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLength="32"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            tools:text="HÃ¸yskolen Kristiania" />

        <ImageButton
            android:id="@+id/detail_pin_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/pin"
            android:src="@drawable/ic_place_orange_24dp" />

        <TextView
            android:id="@+id/place_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overview_place_name"
            android:layout_alignStart="@+id/overview_place_name"
            android:textColor="#656363"
            android:textSize="12sp"
            tools:text="Test" />


    </RelativeLayout>
    
    


</androidx.cardview.widget.CardView>