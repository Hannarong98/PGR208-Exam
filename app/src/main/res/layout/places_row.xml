<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/util_view_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:id="@+id/pin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/pin"
        android:src="@drawable/ic_place_orange_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="#000"
        android:maxLength="20"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/pin"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="TEST" />

    <TextView
        android:id="@+id/place_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#656363"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/place_name"
        app:layout_constraintLeft_toLeftOf="@id/place_name"
        app:layout_constraintTop_toBottomOf="@id/place_name"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Test" />

</androidx.constraintlayout.widget.ConstraintLayout>